        user: {
          select: {
            id: true,
            firstName: true,
            profileImage: true,
          }
        }
      }
    });

    if (!marketStand) return null;

    // Serialize dates and validate hours format
    const hours = marketStand.hours as WeeklyHours | null;
    
    return {
