                <div className="flex flex-shrink-0 items-center">
                  <Link href="/admin" className="text-xl font-bold">
                    Admin Portal
                  </Link>
                </div>
                <AdminNav isSuperAdmin={user.role === 'SUPER_ADMIN'} />
              </div>
            </div>
          </div>
        </header>

        {/* Main Content */}
        <main className="py-10">
          <div className="mx-auto max-w-7xl sm:px-6 lg:px-8">
            {children}
          </div>
        </main>
